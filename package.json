{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My own personal website",
  "main": "app.js",
  "scripts": {
    "dev": "vitreum --dev",
    "build": "vitreum",
    "lint": "eslint --fix **/*.{js,jsx}",
    "lint:dry": "eslint **/*.{js,jsx}",
    "start": "node app.js",
    "post": "node scripts/newpost.script.js",
    "blog": "node scripts/newpost.script.js",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stolksdorf/personal-site.git"
  },
  "keywords": [],
  "author": "stolksdorf",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stolksdorf/personal-site/issues"
  },
  "homepage": "https://github.com/stolksdorf/personal-site#readme",
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "classnames": "^2.2.6",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "pico-conf": "^1.5.1",
    "pico-md": "^1.0.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "shortid": "^2.2.14",
    "vitreum": "^5.6.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-plugin-react": "^7.12.4"
  },
  "vitreum": {
    "targets": [
      "client/main/main.jsx",
      "client/blog/blog.jsx"
    ],
    "template": "client/html.template.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintIgnore": [
    "build/*",
    "node_modules/*"
  ]
}
