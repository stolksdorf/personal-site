{
  "name": "personal-site",
  "version": "1.0.0",
  "description": "My own personal website",
  "main": "app.js",
  "scripts": {
    "dev": "vitreum --dev",
    "build": "vitreum",
    "lint": "eslint --fix **/*.{js,jsx}",
    "lint:dry": "eslint **/*.{js,jsx}",
    "heroku-postbuild": "npm run build",
    "start": "node app.js",
    "post": "node scripts/newpost.script.js",
    "resume": "node scripts/resume.script.js",
    "resume:dev": "nodemon -e md,less scripts/resume.script.js",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stolksdorf/personal-site.git"
  },
  "keywords": [],
  "author": "stolksdorf",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stolksdorf/personal-site/issues"
  },
  "homepage": "https://github.com/stolksdorf/personal-site#readme",
  "dependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "classnames": "^2.2.6",
    "create-react-class": "^15.6.3",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "marked": "^0.6.1",
    "pico-conf": "^1.5.1",
    "pico-router": "^3.2.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "vitreum": "^5.5.2",
    "wkhtmltopdf": "^0.3.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-plugin-react": "^7.12.4"
  },
  "vitreum": {
    "targets": [
      "client/main/main.jsx"
    ],
    "template": "client/html.template.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintIgnore": [
    "build/*",
    "node_modules/*"
  ]
}
